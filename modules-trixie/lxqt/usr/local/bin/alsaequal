#!/bin/bash

if [ ! -f $HOME/.asoundrc ] || [ -z "$(grep "# alsa_equalizer_debdog" $HOME/.asoundrc 2> /dev/null)" ]; then
yad --text="  Alsa Equalizer is currently not enabled. \n  You want to enable it? \n  Can be disabled again from menu: 'Alsa Equalizer Enable/Disable'.  " --title="Alsa Equalizer"
ret=$?
[[ $ret -ne 0 ]] && exit

cp -a /opt/conf/.asoundrc $HOME/
/usr/bin/alsamixergui -D equal
else
/usr/bin/alsamixergui -D equal
fi

